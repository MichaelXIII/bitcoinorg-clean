---
layout: none
permalink: .htaccess
---
RewriteEngine on
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.+)$ $1.html [L]
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.+)$ $1.php [L]
RewriteRule ^about\.html$ /en/about [R=301,L]
RewriteRule ^clients\.html$ /en/choose-your-wallet [R=301,L]
RewriteRule ^news\.html$ /en/version-history [R=301,L]
RewriteRule ^bitcoin\.pdf$ /files/bitcoin.pdf [L]
RewriteRule ^gavinandresen\.asc$ /files/gavinandresen.asc [L]
RewriteRule ^gmaxwell\.asc$ /files/gmaxwell.asc [L]
RewriteRule ^jgarzik-exmulti\.asc$ /files/jgarzik-exmulti.asc [L]
RewriteRule ^laanwj\.asc$ /files/laanwj.asc [L]
RewriteRule ^pieterwuille\.asc$ /files/pieterwuille.asc [L]
RewriteRule ^schneider\.asc$ /files/schneider.asc [L]
